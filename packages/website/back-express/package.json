{
  "name": "back-express",
  "version": "1.0.0",
  "main": "index.js",
  "license": "",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "tsc && node dist/index.js",
    "dev": "tsc && node dist/index.js"
  },
  "dependencies": {
    "express": "^4.19.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "typescript": "^5.4.5"
  },
  "nodemonConfig": {
    "watch": [
      "src/**/*.ts"
    ],
    "ext": "ts",
    "exec": "node --loader ts-node/esm src/index.ts",
    "ignore": [
      "src/**/*.spec.ts"
    ],
    "delay": "1000"
  }
}
